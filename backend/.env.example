# WhatsApp Business API Configuration
# Get these from Meta Developer Portal: https://developers.facebook.com/

# Your WhatsApp Business Phone Number ID (found in WhatsApp > API Setup)
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here

# Your WhatsApp Business Access Token (found in WhatsApp > API Setup)
WHATSAPP_ACCESS_TOKEN=your_access_token_here

# Webhook verification token (you set this when configuring webhook)
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token_here

# WhatsApp Cloud API Base URL
WHATSAPP_API_BASE_URL=https://graph.facebook.com/v18.0
MEDIA_BASE_URL=https://21dd5bd35d64.ngrok-free.app

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True

# Media Configuration
